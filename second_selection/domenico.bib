@Article{Zhu2018638,
  author          = {Zhu, H.-J. and You, Z.-H. and Zhu, Z.-X. and Shi, W.-L. and Chen, X and Cheng, L},
  title           = {{DroidDet: Effective and robust detection of android malware using static analysis along with rotation forest model}},
