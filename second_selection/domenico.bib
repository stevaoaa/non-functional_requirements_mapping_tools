@InProceedings{Jabbarvand:2016:ETM:2931037.2931067,
  author          = {Jabbarvand, Reyhaneh and Sadeghi, Alireza and Bagheri, Hamid and Malek, Sam},
  title           = {{Energy-aware Test-suite Minimization for Android Apps}},
