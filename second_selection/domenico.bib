  bdsk-url-1      = {http://dx.doi.org/10.1007/978-3-319-22668-2_17},
  bytitledomenico = {doubt},
  doi             = {10.1007/978-3-319-22668-2_17},
  isbn            = {978-3-319-22668-2; 978-3-319-22667-5},
  issn            = {0302-9743},
}

@Article{TAO201739,
