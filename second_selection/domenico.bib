  bdsk-url-2      = {https://doi.org/10.1016/j.infsof.2017.04.001},
  bytitledomenico = {no},
  doi             = {https://doi.org/10.1016/j.infsof.2017.04.001},
  url             = {http://www.sciencedirect.com/science/article/pii/S0950584917302987},
}

