@Article{MCNEIL20161219,
  author          = {McNeil, Paul and Shetty, Sachin and Guntu, Divya and Barve, Gauree},
  title           = {{SCREDENT: Scalable Real-time Anomalies Detection and Notification of Targeted Malware in Mobile Devices}},
