@InProceedings{Coppola:2016:AMU:2945404.2945406,
  author          = {Coppola, Riccardo and Raffero, Emanuele and Torchiano, Marco},
  title           = {{Automated Mobile UI Test Fragility: An Exploratory Assessment Study on Android}},
